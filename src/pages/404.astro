---
import { SITE_TAB } from "@config";
import type { Metadata } from "@interface/data";
import BaseLayout from "@layouts/BaseLayout.astro";

const metadata: Metadata = {
  title: `404 - ${SITE_TAB}`,
  description: "Page not found",
  type: "website",
};
---

<BaseLayout metadata={metadata}>
  <div class="flex w-full flex-col items-center justify-center px-4 py-20">
    <div class="mx-auto max-w-2xl text-center">
      <!-- 404 Number -->
      <div class="mb-8">
        <div class="text-3xl font-bold md:text-4xl">404</div>
      </div>

      <!-- Error Message -->
      <div class="mb-12">
        <h1 class="text-base-content mb-4 text-3xl font-bold md:text-4xl">
          Oops! Page Not Found
        </h1>
        <p class="text-base-content/70 text-xl md:text-2xl">
          The page you're looking for seems to have wandered off into the
          digital void.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col justify-center gap-4 sm:flex-row">
        <a href="/" class="btn btn-primary btn-lg px-8"> Back to Home </a>

        <button onclick="history.back()" class="btn btn-outline btn-lg px-8">
          Go Back
        </button>
      </div>
    </div>
  </div>
</BaseLayout>
