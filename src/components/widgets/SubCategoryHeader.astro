---
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";

interface Props {
  subCategory: CollectionEntry<"subCategory">;
  postCount: number;
}

const { subCategory, postCount } = Astro.props;
---

<!-- Sub-category header with left decorative bar and stacked layout -->
<div class="mb-8 flex items-start gap-4">
  <!-- Left decorative element -->
  <div class="mt-1 flex flex-col items-center gap-2">
    <div class="bg-primary h-8 w-1 rounded-full"></div>
    <div class="bg-primary/20 rounded-full p-2">
      <Icon name="lucide:folder-open" class="text-primary h-4 w-4" />
    </div>
    <div class="bg-primary/30 h-4 w-1 rounded-full"></div>
  </div>

  <!-- Main content area -->
  <div class="flex-1">
    <div class="mb-2">
      <h2 class="text-base-content mb-1 text-2xl font-bold">
        {subCategory.data.title}
      </h2>
      <div class="flex items-center gap-2">
        <div class="bg-primary h-2 w-2 rounded-full"></div>
        <span class="text-base-content/70 text-sm font-medium">
          {postCount}
          {postCount === 1 ? "Post" : "Posts"} Available
        </span>
      </div>
    </div>
  </div>
</div>
