---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  }).format(date);
};
---

<article
  class="group card bg-base-100 rounded-lg shadow-md transition-all duration-200 hover:-translate-y-1 hover:shadow-xl"
>
  <a href={`/${post.id}`} class="block">
    {
      post.data.cover && (
        <figure class="relative overflow-hidden rounded-t-lg">
          <Image
            src={post.data.cover}
            alt={post.data.title}
            class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
            loading="lazy"
            quality={80}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
        </figure>
      )
    }

    <div class="card-body p-4">
      <!-- Title -->
      <div
        class="card-title text-base-content group-hover:text-primary mb-3 text-lg leading-tight font-bold transition-colors"
      >
        {post.data.title}
      </div>

      <!-- Categories and Tags in the same row -->
      <div class="mb-2 flex items-center justify-between">
        <!-- Categories -->
        <div class="flex flex-wrap gap-1">
          {
            post.data.categories && post.data.categories.length > 0 && (
              <>
                {post.data.categories.slice(0, 2).map((category) => (
                  <div class="badge badge-primary badge-sm">
                    {typeof category === "string" ? category : category.id}
                  </div>
                ))}
                {post.data.categories.length > 2 && (
                  <div class="badge badge-outline badge-sm">
                    +{post.data.categories.length - 2}
                  </div>
                )}
              </>
            )
          }
        </div>

        <!-- Tags -->
        <div class="flex gap-1">
          {
            post.data.tags && post.data.tags.length > 0 && (
              <>
                {post.data.tags.slice(0, 2).map((tag) => (
                  <div class="badge badge-secondary badge-xs">
                    #{typeof tag === "string" ? tag : tag.id}
                  </div>
                ))}
              </>
            )
          }
        </div>
      </div>

      <!-- Meta info -->
      <div class="card-actions flex items-center">
        <div class="text-base-content/60 flex items-center gap-2 text-xs">
          <Icon name="lucide:calendar" class="h-3 w-3" />
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
        </div>
      </div>
    </div>
  </a>
</article>
